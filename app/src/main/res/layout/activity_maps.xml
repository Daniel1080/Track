<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.track.MapsActiv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCloud"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="63dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Switch
            android:id="@+id/swTrk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/josefin_sans_bold"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/swTitle"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@android:color/holo_green_light"
            android:textSize="24sp"
            android:theme="@style/SwitchTheme" />

        <TextView
            android:id="@+id/txtTrkUsr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato"
            android:shadowColor="@color/colorMidBlue"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/LocList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCloud"
            android:fadeScrollbars="false"
            android:fastScrollAlwaysVisible="false"
            android:scrollIndicators="left"
            android:scrollbarStyle="insideOverlay"
            android:textColor="@color/colorExodus"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
